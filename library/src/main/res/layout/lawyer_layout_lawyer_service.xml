<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:background="@drawable/uikit_bg_card_form"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/iv_lawyer_service_logo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:scaleType="fitXY"
        android:src="@mipmap/lawyer_ic_lawyer_letter2" />

    <TextView
        android:id="@+id/tv_lawyer_service_name"
        style="@style/UikitTextView"
        android:text="律师函"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/tv_lawyer_service_price"
        style="@style/UikitTextView.Auxiliary.Small"
        android:layout_marginTop="2dp"
        tools:text="￥100.00/份" />

</LinearLayout>