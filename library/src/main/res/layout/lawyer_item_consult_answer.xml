<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hm.iou.uikit.CircleImageView
        android:id="@+id/iv_answer_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/uikit_icon_header_unknow"
        app:civ_border_color="@color/uikti_header_border_color"
        app:civ_border_width="@dimen/uikti_header_border_width" />

    <RelativeLayout
        android:id="@+id/rl_answer_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toEndOf="@id/iv_answer_avatar"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_answer_name"
            style="@style/UikitTextView"
            android:textColor="@color/uikit_text_sub_content"
            tools:text="张三律师" />

        <TextView
            android:id="@+id/tv_answer_time"
            style="@style/UikitTextView.Auxiliary.Small"
            android:layout_alignParentEnd="true"
            tools:text="2019.12.16 13:23" />

        <TextView
            android:id="@+id/tv_answer_content"
            style="@style/UikitTextView"
            android:layout_below="@id/tv_answer_name"
            android:layout_marginTop="4dp"
            android:lineSpacingExtra="3dp"
            tools:text="律师回答的内容律师回答的内容律师回答的内容律师回答的内容律师回答的内容律师回答的内容" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom_divider"
        style="@style/UikitDivider.Horizontal"
        android:layout_below="@id/rl_answer_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" />

</RelativeLayout>