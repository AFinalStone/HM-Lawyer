<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@drawable/uikit_bg_card_form"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_lawyer_service_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@mipmap/lawyer_ic_lawyer_letter2" />

    <TextView
        android:id="@+id/tv_lawyer_service_name"
        style="@style/UikitTextView"
        android:layout_marginTop="5dp"
        android:text="律师函"
        android:textSize="@dimen/textFontSize_16" />

    <TextView
        android:id="@+id/tv_lawyer_service_price"
        style="@style/UikitTextView"
        android:layout_marginTop="2dp"
        tools:text="￥100.00/份" />

</LinearLayout>